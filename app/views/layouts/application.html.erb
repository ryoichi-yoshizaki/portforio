<!DOCTYPE html>
<html>
  <head>
    <title>profgram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.min.css" integrity="sha256-UzFD2WYH2U1dQpKDjjZK72VtPeWP50NoJjd26rnAdUI=" crossorigin="anonymous" />
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://code.jquery.com/jquery-3.0.0.min.js"></script>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification is-info">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="notification is-danger">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>

    <nav class="navbar headers">
      <div class="navbar-brand">
        <%= link_to root_path, class: "navbar-item" do %>
          <h1 class="titles is-4 header-title mt-4 mb-4" style="font-family: cursive;">profgram</h1>
        <% end %>
        <div class="navbar-burger mt-4 mb-4 " data-target="#navbarExampleTransparentExample" data-toggle="collapse">
          <span class="humberger-lines"></span>
          <span class="humberger-lines"></span>
          <span class="humberger-lines"></span>
        </div>
      </div>

      <% if user_signed_in? %>
        <div id="navbarExampleTransparentExample"  class="navbar-menu  collapse top-menu" >
            
            <div class="navbar-item">
              <%= link_to "メンバーニュース一覧", recipes_path, class: " button is-warning is-light mt-4 mb-4" %>
            </div>
            <div class="navbar-item">
              <%= link_to "個人ニュース投稿", new_recipe_path, class: " button is-warning is-light mt-4 mb-4" %>
            </div>
            <div class="navbar-item">
                  <p class="member">
                    <%= link_to "メンバープロフィール一覧", users_path, class: " button is-warning is-light mt-4 mb-4" %>
                  </p>
            </div>
            <div class="navbar-item">
                  <p class="member">
                    <%= link_to "プロフィール", user_path(current_user), class: "button is-warning is-light mt-4 mb-4" %>
                  </p>
            </div>
            <div class="navbar-item">
                    <p class="member">
                      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: " button is-warning is-light mt-4 mb-4" %>
                    </p>
            </div>
            <%
=begin%>
 <div class="navbar-item">
                    <p class="member">
                      <%= link_to "新規登録", new_user_registration_path, class: "button is-warning is-light mt-4 mb-4" %> 
                    </p>
            </div> 
<%
=end%>
            
      <% else %>
        <div id="navbarExampleTransparentExample" class="navbar-menu top-menu">
          <div class="navbar-item">
            <p class="member">
              <%= link_to "個人ニュース一覧", recipes_path, class: "navbar-item button is-warning is-light mt-4 mb-4" %>
            </p>
          </div>
          <div class="navbar-item">
            <p class="member">
              <%= link_to "メンバー一覧", users_path, class: "navbar-item button is-warning is-light mt-4 mb-4" %>
            </p>
          </div>
          <div class="navbar-item ">              
            <p class="member">
              <%= link_to "ログイン", new_user_session_path, class: "button is-warning is-light mt-4 mb-4" %>
            </p>
          </div>
          <div class="navbar-item">
            <p class="member">
              <%= link_to "新規メンバー登録", new_user_registration_path, class: "button is-warning is-light mt-4 mb-4" %>
            </p>   
          </div>
        </div>
      <% end %>

    </nav>
    <%= yield %>
    <footer>
      <div class="footers">
        <p class="copy_right">Copyright ©︎ Official shirudandism Clan</p>
      </div>
    </footer>
  </body>
</html>
