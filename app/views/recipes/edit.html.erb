<section class="hero">
  <div class="hero-body">
    <div class="container">
      <h1 class="title_one">
        --- Contents edit ---
      </h1>
    </div>
  </div>
</section>

<% if @recipe.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @recipe.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="content_edit"> 
    <%= form_for @recipe do |f| %>
      <div class="field">
        <%= f.label :title, "TITLE", class: "label" %>
        <%= f.text_field :title, class: "input" %>
      </div>

      <div class="field">
        <%= f.label :body, "content", class: "label" %>
        <%= f.text_area  :body, :size=> "80*70", class: "textarea" %>
      </div>

      <div class="field">
        <%= f.label :image, "Img", class: "label" %>
        <%= f.attachment_field :image, class: "input" %>
      </div>

      <%= f.submit '投稿', class: "button is-success" %>
    <% end %>
  </div>
</section>
