
<section>
  <div class="hero-body">
    <div class="container">
      <h1 class="title_one">
        --- Member-news ---
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns">
      <% @recipes.each do |recipe| %>
        <div class="column">
            <div class="card-image">
              <figure class="image is-4by3">
                <%= link_to recipe_path(recipe) do %>
                  <%= attachment_image_tag recipe, :image %>
                <% end %>
              </figure>
            </div>
            <div class="media">
                <%#小さい写真%>
                <div class="media-left">
                  <figure class="image is-48x48 recipes_img">
                    <%= attachment_image_tag recipe.user, :profile_image, fallback: "no-image.png", class: "profile_image" %>
                  </figure>
                </div>
                <%#ユーザー名を記載%>
                <div class="media-content">
                  <div class="title"><%=link_to recipe.user.username, user_path(recipe.user) %></div>
                </div>
                <div class="update-day">
                <%#更新日時を記述%>
                <div class="recipes_times"><%= recipe.updated_at.strftime("%Y-%m-%d %H:%M") %></time> 更新</div>
              </div>
            </div>
        </div>
      <% end %>
    </div>
  </div>
</section>



