<section class="hero">
  <div class="hero-body">
    <div class="container">
      <h1 class="title_one">
      --- My page ---
      </h1>
    </div>
  </div>
</section>

<section class="section"> 
    <div class="profile">  
      <div class="card-image">
        <figure class="top_image" style="margin-left: auto; margin-right: auto;"> 
          <%= attachment_image_tag @user, :profile_image, :fill, 1000,1000,fallback: "no-image.png", class: "profile_image is-rounded" %>
        </figure>
      </div>

      <div class="profile_edit">
        <div class="a_name">
          <strong><%= @user.username %></strong>
          <br>
          <% if @user.id == current_user.id %><% end %>
          <br>
          <strong><p>自己紹介</p></strong>
          <br>
          <div class="comment">
            <%= @user.profile %>
          </div>
        </div>
        <div class="edit">
          <%= @user.email%>
          <%= link_to "編集", edit_user_path(@user), class: "button" %>
        </div>
      </div>  
    </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @user.recipes.each do |recipe| %>
        <div class="column is-4">
          <div class="card">
            <div class="card-image">
              <figure class="iamge is-4by3">
                <%= link_to recipe_path(recipe) do %>
                  <%= attachment_image_tag recipe, :image, fallback:"no-image.png" %>
                <% end %>
              </figure>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-content">
                  
                  <%= link_to recipe_path(recipe), class: "panel-block" do %>
                    <%#<span class="panel-icon"><i class="fas fa-book"></i></span>%>
                    <p class="title"><%= recipe.title %></p>
                    
                  <% end %>
                  <% if @user.id == current_user.id %>
                    <%= link_to edit_recipe_path(recipe), class: "panel-block" do %>
                      <span class="panel-icon">
                      <i class="fas fa-edit"></i>
                      </span>
                    この内容を編集する
                    <% end %>
                    <%= link_to recipe_path(recipe), method: :delete, data: {confirm: "削除しますか"}, class:"panel-block" do %>
                      <span class="panel-icon">
                        <i class="fas fa-trash"></i>
                      </span>
                      この内容を削除する
                    <% end %>
                  <% end %>  
                </div>
              </div>
              <div class="content">
                <time><%= recipe.updated_at.strftime("%Y-%m-%d %H:%M") %></time>更新
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

              

